<Window x:Class="rss.grpc.client.NameEmailWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:rss.grpc.client"
        mc:Ignorable="d"
        Title="Client Info (Optional)" Height="190" Width="400" WindowStartupLocation="CenterOwner" WindowStyle="ToolWindow">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition Height="30"/>
        </Grid.RowDefinitions>
        <StackPanel Margin="4,14">
            <TextBlock>Name:</TextBlock>
            <TextBox Name="clientNameText" Margin="0,7" Height="28"></TextBox>
            <TextBlock>Email:</TextBlock>
            <TextBox Name="emailText" Margin="0,7" Height="28"></TextBox>
        </StackPanel>
        <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Right" Margin="4,0">
            <Button Width="100" Height="28" Name="okButton" Click="okButton_Click">OK</Button>
            <Button Width="100" Height="28" Margin="4,0,0,0" Name="cancelButton" Click="cancelButton_Click">Cancel</Button>
        </StackPanel>
    </Grid>
</Window>
